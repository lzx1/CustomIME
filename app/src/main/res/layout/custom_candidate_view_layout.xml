<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_tv_pinyin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/candidate_text"
        android:textColor="@android:color/white"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.googlecode.openwnn.legacy.CLOUDSONG.CandidateView
            android:id="@+id/id_candidate_view"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="@dimen/candidate_font_text_size"/>

        <Button
            android:id="@+id/id_btn_more"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:text="more"
            android:background="@color/candidate_text"
            android:textSize="12dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>